<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAppFront.Pages.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Email" />
            <Entry x:Name="EntEmail" Placeholder="Digite seu email" Keyboard="Email" />

            <Label Text="Senha" />
            <Entry x:Name="EntPassword" Placeholder="Digite sua senha" IsPassword="True" />

            <Button Text="Login" Clicked="loginClicked"/>

            <Label Text="NÃ£o tem uma conta?" />
            <Button  Text="Registrar"
                 Clicked="RegisterClicked"
                 TextColor="Blue"
                 HorizontalOptions="Start"
                 BackgroundColor="Transparent"
                 FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>