<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAppFront.Pages.InscricaoPage"
             Title="RegisterPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Nome" />
            <Entry x:Name="NomeEntry" Placeholder="Digite seu nome" />

            <Label Text="Email" />
            <Entry x:Name="EmailEntry" Placeholder="Digite seu email" Keyboard="Email" />

            <Label Text="Senha" />
            <Entry x:Name="SenhaEntry" Placeholder="Digite sua senha" IsPassword="True" />

            <Label Text="Confirmar Senha" />
            <Entry x:Name="ConfirmarSenhaEntry" Placeholder="Confirme sua senha" IsPassword="True" />

            <Button Text="Registrar" Clicked="OnRegistrarClicked" />

            <Label Text="Já possui uma conta?" />
            <Button  Text="Faça login"
                     Clicked="OnIrParaLoginClicked"
                     TextColor="Blue"
                     HorizontalOptions="Start"
                     BackgroundColor="Transparent"
                     FontAttributes="Bold" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>