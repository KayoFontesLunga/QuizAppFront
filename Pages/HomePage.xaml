<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAppFront.Pages.HomePage"
             Title="HomePage">



    <StackLayout Padding="10">
        <CollectionView x:Name="QuizCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Margin="5" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Description}" FontSize="14" LineBreakMode="TailTruncation"/>
                            <Label Text="{Binding CreatedAt, StringFormat='Criado em {0:dd/MM/yyyy}'}" FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>