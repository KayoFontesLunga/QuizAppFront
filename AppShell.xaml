<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuizAppFront.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuizAppFront"
    xmlns:pages="clr-namespace:QuizAppFront.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#a90409"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="FloralWhite">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
        </Tab>
        <Tab Title="Ranking" Icon="ranking.png">
            <ShellContent ContentTemplate="{DataTemplate pages:RankingPage}"/>
        </Tab>
        <Tab Title="Quizzes" Icon="quizzes.png">
            <ShellContent ContentTemplate="{DataTemplate pages:QuizzesPage}"/>
        </Tab>
        <Tab Title="Profile" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}"/>
        </Tab>
        
    </TabBar>

</Shell>
